<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">


    <android.support.constraint.ConstraintLayout
        android:background="@drawable/dialog_bg"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text="请输入密码"
            android:textColor="#212121"
            android:textSize="18sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_passwd_1"
            android:background="@drawable/tv_passwd"
            android:gravity="center"
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            android:width="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_passwd_2"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            />


        <TextView
            android:id="@+id/tv_passwd_2"
            android:background="@drawable/tv_passwd"
            android:gravity="center"
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            android:width="40dp"
            app:layout_constraintLeft_toRightOf="@id/tv_passwd_1"
            app:layout_constraintRight_toLeftOf="@id/tv_passwd_3"
            app:layout_constraintTop_toTopOf="@id/tv_passwd_1"
            />

        <TextView
            android:id="@+id/tv_passwd_3"
            android:background="@drawable/tv_passwd"
            android:gravity="center"
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            android:width="40dp"
            app:layout_constraintLeft_toRightOf="@id/tv_passwd_2"
            app:layout_constraintRight_toLeftOf="@id/tv_passwd_4"
            app:layout_constraintTop_toTopOf="@id/tv_passwd_1"
            />

        <TextView
            android:id="@+id/tv_passwd_4"
            android:background="@drawable/tv_passwd"
            android:gravity="center"
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            android:width="40dp"
            app:layout_constraintLeft_toRightOf="@id/tv_passwd_3"
            app:layout_constraintRight_toLeftOf="@id/tv_passwd_5"
            app:layout_constraintTop_toTopOf="@id/tv_passwd_1"
            />

        <TextView
            android:id="@+id/tv_passwd_5"
            android:background="@drawable/tv_passwd"
            android:gravity="center"
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            android:width="40dp"
            app:layout_constraintLeft_toRightOf="@id/tv_passwd_4"
            app:layout_constraintRight_toLeftOf="@id/tv_passwd_6"
            app:layout_constraintTop_toTopOf="@id/tv_passwd_1"
            />

        <TextView
            android:id="@+id/tv_passwd_6"
            android:background="@drawable/tv_passwd"
            android:gravity="center"
            android:height="40dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:text=""
            android:textColor="#000000"
            android:textSize="16sp"
            android:width="40dp"
            app:layout_constraintLeft_toRightOf="@id/tv_passwd_5"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_passwd_1"
            />

        <TextView
            android:id="@+id/tv_dialog_cancel"
            android:background="@drawable/tv_dialog_cancel"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="取消"
            android:textColor="#757575"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tv_dialog_ok"
            app:layout_constraintTop_toBottomOf="@id/tv_passwd_1"/>

        <TextView
            android:id="@+id/tv_dialog_ok"
            android:background="@drawable/tv_dialog_ok"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="50dp"
            android:layout_width="0dp"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:text="确定"
            android:textColor="#1976D2"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/tv_dialog_cancel"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_passwd_1"/>


        <EditText
            android:id="@+id/et_support_num"
            android:background="@android:color/transparent"
            android:cursorVisible="false"
            android:digits="0123456789"
            android:inputType="number"
            android:layout_height="20dp"
            android:layout_width="1dp"
            android:maxLength="6"
            android:maxLines="1"
            android:textSize="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_passwd_1"/>


    </android.support.constraint.ConstraintLayout>


</FrameLayout>